{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "ESLint",
  "extends": "./packages/tsconfig/base.json",
  "compilerOptions": {
    "noImplicitAny": false,
    "noEmit": false,
    "target": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@extension/*": ["packages/*/src"]
    }
  },
  "include": ["packages/**/*.ts", "packages/**/*.tsx"]
}
